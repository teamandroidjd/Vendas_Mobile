<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdsystem.br.vendasmobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ctSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actLogin"
            android:label="Força de Vendas"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <action android:name="android.intent.action.MAIN" />
        </activity>
        <activity
            android:name=".act_ListClientes"
            android:label="Clientes"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".actListPedidos"
            android:screenOrientation="portrait"
            android:label="Pedidos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".act_CadClientes"
            android:label="Cadastro de Clientes"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".actDadosCliente"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_act_dados_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".actSincronismo"
            android:label="Sincronização de Dados"/>
        <activity
            android:name=".act_TH_contclie"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".act_TH_dadosclie"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".act_TH_obsclie"
            android:screenOrientation="portrait"/>
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ConfigWeb"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".act_ListProdutos"
            android:label="Catálogo de Produtos"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".actDadosProdutos"
            android:screenOrientation="portrait"/>
        <activity android:name=".actListClientPedidos"
            android:screenOrientation="portrait"/>
        <activity android:name=".act_ListClientesPedidos"
            android:label="Catálogo de Clientes"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Controller.Lista_clientes"
            android:windowSoftInputMode="stateHidden"
            android:label="Catálogo de Clientes"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Controller.VenderProdutos"
            android:windowSoftInputMode="stateHidden"
            android:label="Cadastrar Pedido"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Controller.Lista_produtos"
            android:windowSoftInputMode="stateHidden"
            android:label="Cadastrar Pedido"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Controller.ConfPagamento"
            android:label="Formas de Pagamento"
            android:screenOrientation="portrait"></activity>

    </application>
    <supports-screens
        android:normalScreens="true"
        />

</manifest>