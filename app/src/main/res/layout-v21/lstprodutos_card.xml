<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:background="@color/colorCardClie"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorCardClie"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_descricao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição do produto"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_codprod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código do produto"
                    android:textColor="@color/colordescClie"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtunvenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unidade de venda"
                        android:textColor="@color/colordescClie"
                        android:textSize="10sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lbl5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="55dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/txtunvenda"
                        android:layout_toRightOf="@+id/txtunvenda"
                        android:text=" - "
                        android:textColor="@color/colordescClie"
                        android:textSize="10sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/txtuncompra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lbl5"
                        android:layout_toRightOf="@+id/lbl5"
                        android:text="Unidade de compra"
                        android:textColor="@color/colordescClie"
                        android:textSize="10sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lbl6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="55dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/txtuncompra"
                        android:layout_toRightOf="@+id/txtuncompra"
                        android:text=" - "
                        android:textColor="@color/colordescClie"
                        android:textSize="10sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/txtapres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lbl6"
                        android:layout_toRightOf="@+id/lbl6"
                        android:text="Apresentação"
                        android:textColor="@color/colordescClie"
                        android:textSize="10sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/vlvenda1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="12sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>