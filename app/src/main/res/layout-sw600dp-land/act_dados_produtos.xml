<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dadosprod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".actDadosProdutos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayoutprod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/codprod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código:"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txt_codprod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CÓDIGO"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição:"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txt_descricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESCRIÇÃO"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtunvenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidade"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtapres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apresentação"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtfabricante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fabricante"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtforncedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fornecedor"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtclasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classe"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtmarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtpreco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecoauxiliara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecoauxiliarb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecoauxiliarc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecoauxiliard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecopromocaob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtprecopromocaoa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preço de venda"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
