<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prod_lisview_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.00"
        android:gravity="center|left"
        android:paddingLeft="4dp"
        android:text="produto com a descricao muito grande. assim podemos ver como se compota."
        android:textColor="@color/colordescClie"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/prod_lisview_quantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.40"
        android:gravity="center"
        android:text="1000,00"
        android:textColor="@color/colordescClie"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/prod_lisview_preco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:gravity="center"
        android:text="R$ 100000,5000"
        android:textColor="@color/colordescClie"
        android:textSize="20dp"
         />

    <TextView
        android:id="@+id/prod_lisview_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.70"
        android:gravity="center"
        android:text="R$ 10000000,00"
        android:textColor="@color/colordescClie"
        android:textSize="20dp"
         />

</LinearLayout>
