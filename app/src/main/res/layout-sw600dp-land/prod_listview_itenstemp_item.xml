<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prod_lisview_descricao"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="produto com a descricao muito grande. assim podemos ver como se compota."
        android:textColor="@color/colordescClie"
        android:textSize="25dp"/>


    <TextView
        android:id="@+id/prod_lisview_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="R$ 1000,00"
        android:textColor="@color/colordescClie"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <TextView
        android:id="@+id/prod_lisview_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="R$ 1000,5000"
        android:textColor="@color/colordescClie"
        android:textSize="25dp"
        android:layout_marginStart="285dp"
        android:layout_marginLeft="324dp" />

    <TextView
        android:id="@+id/prod_lisview_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:text="1000"
        android:textColor="@color/colordescClie"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/prod_lisview_descricao"
        android:layout_toEndOf="@+id/prod_lisview_descricao" />

</RelativeLayout>
