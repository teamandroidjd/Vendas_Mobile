<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".TH_DadosClie">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomefantasia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome fantasia:"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/txt_nomefantasia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOME FANTASIA"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nomerazaocliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Razão Social:"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />


                <TextView
                    android:id="@+id/txt_nomerazaocliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAZAO SOCIAL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/txt_documento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documento"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/txt_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identidade"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">


                <TextView
                    android:id="@+id/txt_ie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inscrição Estadual"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtComplemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complemento"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtEstatoCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtcidadecliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cidade"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtBairroCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bairro"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CEP"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_telefone_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:text="Telefone1"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_telefone_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone2"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/colordescClie"
                    android:textSize="@dimen/textsize_sw600_30"
                    android:textStyle="normal|bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
