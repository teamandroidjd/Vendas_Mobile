<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/prod_lisview_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.70"
        android:gravity="center|left"
        android:paddingLeft="4dp"
        android:text="produto com a descricao muito grande. assim podemos ver como se compota."
        android:textColor="@color/colordescClie"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/prod_lisview_quantidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:gravity="center"
        android:text="100000"
        android:textColor="@color/colordescClie"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/prod_lisview_preco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.10"
        android:gravity="center"
        android:text="R$ 1000,5000"
        android:textColor="@color/colordescClie"
        android:textSize="30sp"/>



    <TextView
        android:id="@+id/prod_lisview_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.90"
        android:gravity="center"
        android:paddingRight="4dp"
        android:text="R$ 1000,00"
        android:textSize="30sp"
        android:textColor="@color/colordescClie"

        />

</LinearLayout>
