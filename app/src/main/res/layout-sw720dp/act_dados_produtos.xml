<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DadosProduto">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/img_fundo_splash"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Código: "
                        android:textColor="@color/colordescClie"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/txt_codprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CÓDIGO"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição:"
                        android:textColor="@color/colordescClie"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/txt_descricao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIÇÃO"
                        android:textColor="@color/colorPrimary"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/txtunvenda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unidade"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtapres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apresentação"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtfabricante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fabricante"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtforncedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fornecedor"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtclasse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classe"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtmarca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marca"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50sp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txttabpadrao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço padrão"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecopadrao"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecopadrao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda 1"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtpreco"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtpreco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda 2"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecoauxiliara"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecoauxiliara"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda 3"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecoauxiliarb"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecoauxiliarb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda 4"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecoauxiliarc"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecoauxiliarc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda 5"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecoauxiliard"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecoauxiliard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda P1"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecopromocaoa"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecopromocaoa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:gravity="right"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lnrtabab7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttab7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preço de venda P2"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txtprecopromocaob"
                            android:text="R$ "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprecopromocaob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="100000,0000"
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layqtdminvend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantidade mínina para vendas: "
                            android:textColor="@color/colordescClie"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/txvqtdminvend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="9999,9999"
                            android:textColor="@color/colorAccent"
                            android:textSize="35sp"
                            android:textStyle="normal|bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrtaEstoque"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Estoque: "
                        android:textColor="@color/colordescClie"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/txt_qtdestoque"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000000"
                        android:textColor="@color/colorAccent"
                        android:textSize="40sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>