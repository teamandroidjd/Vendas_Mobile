<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listview_itensxclie_coditem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.20"
            android:gravity="center"
            android:text="123456789123456"
            android:paddingLeft="4dp"
            android:textColor="@color/colordescClie"/>

        <TextView
            android:id="@+id/listview_itensxclie_descitem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:text="Descrição do item muito grande para ver como vai ficar"
            android:textColor="@color/colordescClie"/>


        <TextView
            android:id="@+id/listview_itensxclie_qtditem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="400000"
            android:textColor="@color/colordescClie"/>

        <TextView
            android:id="@+id/listview_itensxclie_vlunititem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.48"
            android:gravity="center"
            android:text="99999,9999"
            android:textColor="@color/colordescClie"/>

        <TextView
            android:id="@+id/listview_itensxclie_vltotalitem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.45"
            android:gravity="right"
            android:paddingRight="4dp"
            android:text="100000,00"
            android:textColor="@color/colordescClie"/>

    </LinearLayout>
</RelativeLayout>
