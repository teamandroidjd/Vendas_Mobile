<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorCardClie"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblStatusPed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblNumPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lblStatusPed"
                        android:layout_toRightOf="@+id/lblStatusPed"
                        android:text="40"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />
                    <TextView
                        android:id="@+id/lblPed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedido"
                        android:layout_marginLeft="210dp"
                        android:layout_marginStart="210dp"
                        android:layout_toEndOf="@+id/lblNumPedido"
                        android:layout_toRightOf="@+id/lblNumPedido"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblNPedidoExt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lblPed"
                        android:layout_toRightOf="@+id/lblPed"
                        android:text="40"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/bola_vermelha"
                        android:id="@+id/imgStatus"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/lblEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empresa"
                    android:textSize="35sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/dtemissao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TerÃ§a, 06 de Dezembro de 2016"
                    android:textColor="@color/colorAccent"
                    android:textSize="35sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/lblNomeCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente da Venda"
                    android:textColor="@color/colorAccent"
                    android:textSize="35sp"
                    android:textStyle="normal|bold" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblsimbolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ "
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblValorTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.000,00"
                        android:textColor="@color/colordescClie"
                        android:textSize="35sp"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/lblsimbolo" />

                    <TextView
                        android:id="@+id/lblVendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Eduardo"
                        android:textColor="@color/colorAccent"
                        android:textSize="35sp"
                        android:textStyle="normal|bold"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>