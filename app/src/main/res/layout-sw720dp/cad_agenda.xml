<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@drawable/img_fundo_splash"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/txv_contato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato: 005 - PAULO ROBERTO DOS SANTOS COUITNHO PINHEIRO FERNANDES DA SILVA SAURO SANTOS DA ROCHA"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:padding="5dp"
            android:background="#afd8de"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Datas e horários sugeridos pelo contato: "
            android:textColor="@color/preto"
            android:textSize="35sp" />

            <ListView
                android:id="@+id/lv_horarios_contatos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colordescClie"
                android:textSize="35sp"
                android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layprodutos"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:background="#c1c1c1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produtos sugeridos pelo contato: "
            android:textColor="@color/preto"
            android:textStyle="bold"
            android:textSize="35sp" />

        <ListView
            android:id="@+id/lv_produtos_contatos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colordescClie"
            android:textSize="35sp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/txv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remarcando / Cadadtrando / Finalizando: "
        android:textColor="@color/preto"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="35sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data e hora"
            android:inputType="datetime"
            android:focusable="false"
            android:padding="10dp"
            android:textColor="@color/preto"
            android:textSize="35sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/EdtOBS"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="35sp"
        android:textColor="@color/preto"
        android:hint="Observação"
        android:textStyle="normal|bold"
        android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="5dp"
        android:background="#7eafa8"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Observações anteriores: "
            android:textColor="@color/preto"
            android:textStyle="bold"
            android:textSize="35sp" />

        <ListView
            android:id="@+id/lv_obs_agenda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colordescClie"
            android:textSize="35sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Cancelar"
            android:textColor="@color/branco"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnsalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Salvar"
            android:textColor="@color/branco"
            android:textSize="30dp"/>
    </LinearLayout>

</LinearLayout>






