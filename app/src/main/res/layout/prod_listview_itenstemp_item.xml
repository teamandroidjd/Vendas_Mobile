<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prod_lisview_descricao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:height="30dp"
            android:gravity="center|left"
            android:text="Coca cola 600 ml"
            android:textColor="@color/colordescClie"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/prod_lisview_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="30dp"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/colordescClie"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:height="30dp"
            android:gravity="center|right"
            android:text="R$ "
            android:textColor="@color/colordescClie"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/prod_lisview_preco"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:height="30dp"
            android:gravity="center|right"
            android:text="4.50"
            android:textColor="@color/colordescClie"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:height="30dp"
            android:gravity="center|right"
            android:text="R$ "
            android:textColor="@color/colordescClie"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/prod_lisview_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:height="30dp"
            android:gravity="center|right"
            android:text="45,00"
            android:textColor="@color/colordescClie"
            android:textSize="15dp" />

    </LinearLayout>
</RelativeLayout>
