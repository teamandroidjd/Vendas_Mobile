<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cad_clientes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".CadastroContatos">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Spinner
                    android:id="@+id/spnTipoContato"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/Tipo_contato"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearrazaosocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Razao Social:"
                    android:textColor="@color/colordescClie"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/txtrazaocontato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nome do clientes que ira vincular o contato que está sendo cadastrado." />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtNomeCompleto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Nome do contato"
                    android:inputType="textCapCharacters"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Número de documento"
                    android:inputType="textCapCharacters"
                    android:maxLength="15"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtSetor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:hint="Setor"
                    android:inputType="textCapCharacters"
                    android:maxLength="30"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:hint="Data Aniversário / Inauguração"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Spinner
                    android:id="@+id/spnCargoEspec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/Cargo_espec">

                </Spinner>
            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/textInputLayout2"
                        android:layout_width="251dp"
                        android:layout_height="52dp">

                        <EditText
                            android:id="@+id/EdtCep"
                            android:layout_width="251dp"
                            android:layout_height="wrap_content"
                            android:elevation="1dp"
                            android:hint="CEP"
                            android:inputType="number"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/btnBuscaCep"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textInputLayout2"
                        android:layout_toRightOf="@+id/textInputLayout2"
                        android:background="@drawable/busca_cep"
                        android:onClick="buscacep" />
                </RelativeLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Endereço"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtNumero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Número"
                    android:inputType="number"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtComple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Complemento"
                    android:inputType="text"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Spinner
                    android:id="@+id/spnUF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/uf"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Spinner
                    android:id="@+id/spnCidade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Spinner
                    android:id="@+id/spnBairro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtTel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Telefone Comercial"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtTel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Telefone Celular"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/lnrtxtdiasemana"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtdiassemana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informe os dias e horários de visita"
                    android:textColor="@color/colordescClie"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrcheckbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cb_domingo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onCheckedboxClicked"
                    android:text="Domingo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/add_horario_domingo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_add_prod"
                        android:layout_gravity="right"
                        android:elevation="3dp"
                        android:clickable="true"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/editTextGroupLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#aa000000"
                        android:visibility="gone"/>

                </LinearLayout>


                <!--<EditText
                    android:id="@+id/edt_domingo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:hint="Dias de Domingo"
                    android:inputType="time"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:cursorVisible="false"/>-->

                <CheckBox
                    android:id="@+id/cb_segunda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segunda" />

                <CheckBox
                    android:id="@+id/cb_terca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terça" />

                <CheckBox
                    android:id="@+id/cb_quarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quarta" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrcheckbox2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/cb_quinta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quinta" />

                <CheckBox
                    android:id="@+id/cb_sexta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexta" />

                <CheckBox
                    android:id="@+id/cb_sabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sábado" />

            </LinearLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/EdtOBS"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="start"
                    android:hint="Observação"
                    android:inputType="textMultiLine" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnsalvarcontato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:onClick="btnsalvarcontato"
                android:text="Salvar"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
