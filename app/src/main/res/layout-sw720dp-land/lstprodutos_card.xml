                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtprecoauxiliarc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000,0000"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/laytab5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tab5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabela 5"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/prod_txv_simbol_preco4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/txtprecoauxiliard"
                        android:text="R$ "
                        android:textSize="25sp"
                        android:textColor="@color/colordescClie"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtprecoauxiliard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000,0000"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/laytabp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tabp1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabela Promo 1"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/prod_txv_simbol_preco5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/txtprecopromocaoa"
                        android:text="R$ "
                        android:textSize="25sp"
                        android:textColor="@color/colordescClie"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtprecopromocaoa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000,0000"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/laytabp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tabp2"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Tabela Promo 2"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/prod_txv_simbol_preco6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/txtprecopromocaob"
                        android:text="R$ "
                        android:textSize="25sp"
                        android:textColor="@color/colordescClie"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtprecopromocaob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100000,0000"
                        android:layout_marginRight="20sp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colordescClie"
                        android:textSize="25sp"
