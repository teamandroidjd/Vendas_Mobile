<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pgto_lisview_parcela"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="12"
            android:textColor="@color/colordescClie"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pgto_lisview_descformpgto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.50"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="Depósito Bancário"
            android:textColor="@color/colordescClie"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/pgto_lisview_diasvencimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="120"
            android:textColor="@color/colordescClie"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pgto_lisview_datavencimento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="01/01/2000"
            android:textColor="@color/colordescClie"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pgto_lisview_valorparcela"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="4dp"
            android:text="R$ 9999,00"
            android:textColor="@color/colordescClie"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>
