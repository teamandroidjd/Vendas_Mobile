<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/CdPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorCardClie"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblStatusPed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblNumPedido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lblStatusPed"
                        android:layout_toRightOf="@+id/lblStatusPed"
                        android:text="40"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblPed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginStart="160dp"
                        android:layout_toEndOf="@+id/lblNumPedido"
                        android:layout_toRightOf="@+id/lblNumPedido"
                        android:text="Pedido"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblNPedidoExt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/lblPed"
                        android:layout_toRightOf="@+id/lblPed"
                        android:text="40"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <ImageView
                        android:id="@+id/imgStatus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_alignParentRight="true"
                        android:src="@drawable/bola_vermelha" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbl01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empresa:"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblEmpresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Empresa"
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbl02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data de emissÃ£o:"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/dtemissao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01/01/2017 12:00:00"
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />


                </LinearLayout>


                <TextView
                    android:id="@+id/lblNomeCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente da Venda"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lblsimbolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ "
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblValorTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/lblsimbolo"
                        android:text="2.000,00"
                        android:textColor="@color/colordescClie"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/lblVendedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:text="Eduardo"
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp"
                        android:textStyle="normal|bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>